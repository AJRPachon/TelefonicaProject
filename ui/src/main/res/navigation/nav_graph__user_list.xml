<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph__user_list"
    app:startDestination="@id/userListFragment"
    tools:ignote="UnusedNavigation">

    <fragment
        android:id="@+id/userListFragment"
        android:name="es.ajrpachon.ui.userlist.fragment.UserListFragment"
        android:label="UserListFragment"
        tools:layout="@layout/fragment__user_list">

        <action
            android:id="@+id/action_userlist_to_nav_graph__user_detail"
            app:destination="@id/nav_graph__user_detail"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/userListFragment">
            <argument
                android:name="userId"
                android:defaultValue="0L"
                app:argType="long" />
        </action>
    </fragment>

    <include app:graph="@navigation/nav_graph__user_detail" />

</navigation>